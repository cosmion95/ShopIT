<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/admin_item_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Name"/>

    <Spinner
        android:padding="2dp"
        android:id="@+id/admin_item_category_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:spinnerMode="dropdown"
        />


    <EditText
        android:id="@+id/admin_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        />

    <Spinner
        android:padding="2dp"
        android:id="@+id/admin_item_image_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:spinnerMode="dropdown"
        />

    <EditText
        android:id="@+id/admin_item_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Price"
        />

    <EditText
        android:id="@+id/admin_item_stoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Stoc"
        />

    <Button
        android:id="@+id/admin_add_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"/>


</LinearLayout>