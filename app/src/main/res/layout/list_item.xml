<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/list_relative_layout"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/list_item_image"
            tools:src="@drawable/laptop_lenovo_3"
            />

        <TextView
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:id="@+id/list_item_name"
            tools:text="Laptop LENOVO Thinkpad 13"
            android:layout_toRightOf="@id/list_item_image"
            android:textSize="20sp"
            />

        <TextView
            android:paddingTop="5dp"
            android:layout_toRightOf="@id/list_item_image"
            android:layout_below="@id/list_item_name"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_category"
            tools:text="Laptops"/>

        <TextView
            android:paddingTop="15dp"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_prod_price"
            android:layout_toRightOf="@id/list_item_image"
            tools:text="1199.99 RON"
            android:layout_below="@id/list_item_category"
            />

        <TextView
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_stock"
            tools:text="In stoc magazin"
            android:layout_toRightOf="@id/list_item_image"
            android:layout_below="@id/list_prod_price"
            />

    </RelativeLayout>

</LinearLayout>